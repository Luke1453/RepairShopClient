<Page x:Class="RepairShopClient.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairShopClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Place Order" Width="100" Height="25" Click="startButton" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Add Items" Width="100" Height="25" Click="addItems" Grid.Row="1" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Page>
